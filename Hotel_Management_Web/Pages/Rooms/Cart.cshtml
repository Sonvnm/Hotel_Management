@page
@model Hotel_Management_Web.Pages.Rooms.CartModel
@{
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cart</title>
</head>
<body>

    <h3>Cart</h3>
    <form method="post" asp-page="cart" asp-page-handler="update">
        <table border="1">
            <tr>
                <th>Action</th>
                <th>Name</th>
                <th>Price</th>
                <th>Photo</th>
                <th>Quantity</th>
                <th>Total <input type="submit" value="Update" /></th>
                <th>Sub Total</th>
            </tr>
            @foreach (var item in Model.cart)
            {
                    <tr align="center">
                        <td align="center">
                            <a asp-page="cart" asp-page-handler="delete" asp-route-id="@item.room.RoomPrice">X</a>
                        </td>
                    <td>@item.room.RoomDescription</td>
                    <td>@item.room.RoomPrice</td>
                    <td><img src="~/images/@item.room.ImageString" width="120" height="100" /></td>
                        
                        <td><input type="number" name="quantities" value="@item.Quantity" min="1" style="width: 50px;" /></td>
                        <td>
                            $@(item.room.RoomPrice * item.Quantity)
                        </td>
                    </tr>
            }
            <tr>
                <td colspan="6" align="right">Total</td>
                <td align="center">$@Model.Total</td>
            </tr>
        </table>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
    <a asp-page="Index">Continue Shopping</a>

</body>
</html>